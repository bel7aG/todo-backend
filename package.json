{
  "name": "todo-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "deploy:dev": "rm -rf .build/ && sls deploy",
    "develop": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "prestart:prod": "yarn tsc",
    "deploy": "env NODE_ENV=production node ./dist/src/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.5",
    "@nestjs/config": "^0.6.1",
    "@nestjs/core": "^7.6.5",
    "@nestjs/graphql": "^7.8.2",
    "@nestjs/mongoose": "7.0.2",
    "@nestjs/platform-fastify": "^7.6.5",
    "apollo-server-fastify": "^3.0.0-alpha.3",
    "config": "^3.3.3",
    "graphql": "14.5.8",
    "mongoose": "5.9.10",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "6.0.0",
    "@types/jest": "24.0.11",
    "@types/mongoose": "5.7.12",
    "@types/node": "11.13.4",
    "@types/supertest": "2.0.7",
    "jest": "^26.6.3",
    "plugin": "^0.3.3",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
